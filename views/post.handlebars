{{!-- section for the individual view of a post --}}
<div class="text-center">
 <h2>{{title}}</h2>
 <p>{{description}}</p>
 <p>Created by {{user.name}} on {{format_date date_created}}</p>
 <button class="btn btn-primary">Add a comment</button>
</div>
<div>
 <h3>Add a comment:</h3>
 {{!-- Ajust classes for post or comment instead of project --}}
 <form class="form new-comment-form">
  <div class="form-group">
   <label for="comment-desc">description:</label>
   <textarea class="form-input" id="comment-desc" name="comment-desc"></textarea>
  </div>
  <div class="form-group">
   <button type="submit" class="btn btn-primary">Submit</button>
  </div>
 </form>
 {{#each comments as |comment| }}
 <div class="row mb-4 comment-list">
  <h4>{{comment.user.name}}</h4>
  <p>{{comment.description}}</p>
  <p>Date published: {{format_date comment.date_created}}</p>
 </div>
 {{/each}}
</div>