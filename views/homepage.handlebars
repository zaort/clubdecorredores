{{!-- Loop over each object on the posts array --}}
{{#each posts as |post| }}
<div class="row mb-4 post">
 <div class="col-md-5">
  <h2>
   <a href="/post/{{post.id}}">{{post.title}}</a>
  </h2>
  <p class="col-md-7">
   {{post.description}}
  </p>
 </div>
 <div>
  {{!-- Syntax is probably incorrect for retriving the user name, adjust --}}
  <p> Created by: {{post.user.name}}</p>
 </div>
</div>
{{/each}}